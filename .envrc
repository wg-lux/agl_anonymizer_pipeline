# Ensure `devenv` is installed; download it if missing
if ! command -v devenv &> /dev/null; then
  echo "Installing devenv via Nix profile..."
  nix profile install github:cachix/devenv
fi

# Load devenv configuration from the provided URL
source_url "https://raw.githubusercontent.com/cachix/devenv/95f329d49a8a5289d31e0982652f7058a189bfca/direnvrc" \
           "sha256-d+8cBpDfDBj41inrADaJt+bDWhOktwslgoP5YiGJ1v0="
use devenv
use flake .
